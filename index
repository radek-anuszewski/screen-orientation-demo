<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Screen orientation demo</title>
  <style>
    body {
      padding: 40px;
    }
  </style>
  <script type="module">
    const display = document.querySelector("#display");
    const displayOrientation = () => {
      display.innerText = `Orientation: ${screen.orientation.type}, angle: ${screen.orientation.angle}`
    }

    screen.orientation.addEventListener("change", displayOrientation);

    displayOrientation();
  </script>
</head>
<body>
<main>
  <header>
    <h1>Screen orientation demo</h1>
  </header>
  <article>
    <h2>Change device orientation and observe changes</h2>
    <section id="display"></section>
  </article>
</main>
</body>
</html>
